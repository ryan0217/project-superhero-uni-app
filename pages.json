{
  "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/search/search",
      "style": {
        "navigationBarTitleText": "搜索"
      }
    },
    {
      "path": "pages/index/index",
      "style": {
        "app-plus": {
          "titleNView": false // 禁用原生导航栏
        },
        "h5": {
          "titleNView": false // 禁用原生导航栏
        },
        "enablePullDownRefresh": true // 开启下拉刷新
      }
    },
    {
      "path": "pages/my/my",
      "style": {}
    },
    {
      "path": "pages/detail/detail",
      "style": {
        "navigationBarTitleText": "电影",
        "app-plus": {
          "titleNView": {
            "type": "transparent",
            "buttons": [
              { "type": "share" }
            ]
          }
        },
        "h5": {
          "titleNView": {
            "type": "transparent",
            "buttons": []
          }
        }
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "超英预告",
    "navigationBarBackgroundColor": "#f8f8f8",
    "backgroundColor": "#f8f8f8"
  },
  "tabBar": {
    "color": "#bfbfbf",
    "selectedColor": "#515151",
    "backgroundColor": "#fff",
    "borderStyle": "black",
    "list": [{
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/images/common/home.png",
        "selectedIconPath": "static/images/common/home_selected.png"
      },
      {
        "pagePath": "pages/search/search",
        "text": "搜索",
        "iconPath": "static/images/common/search.png",
        "selectedIconPath": "static/images/common/search_selected.png"
      },
      {
        "pagePath": "pages/my/my",
        "text": "我的",
        "iconPath": "static/images/common/my.png",
        "selectedIconPath": "static/images/common/my_selected.png"
      }
    ]
  }
}
